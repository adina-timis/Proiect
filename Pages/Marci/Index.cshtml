@page "{id:int?}"
@model Proiect.Pages.Marci.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Marca[0].NumeMarca)
            </th>
           
            <th></th>
        </tr>
    </thead>
    <tbody>

            @foreach (var item in Model.MarcaData.Marci)
            {
                string selectedRow = "";
                if (item.ID == Model.MarcaID)
                {
                    selectedRow = "table-success";
                }
                <tr class="@selectedRow">
            <td>
                @Html.DisplayFor(modelItem => item.NumeMarca)
            </td>
            <td>
                <a asp-page="./Index" asp-route-id="@item.ID">Select</a> |
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
            @if (Model.MarcaData.Servicii != null)
            {
        <h3>Servicii Edited by Selected Marca</h3>
        <table class="table">

                    @foreach (var item in Model.MarcaData.Marci)
                    {
                        string selectedRow = "";
                        if (item.ID == Model.MarcaID)
                        {
                            selectedRow = "table-success";
                        }
                <tr class="@selectedRow">

                    <td>
                                @{
                                    foreach (var b in item.Servicii)
                                    {

                                        @b.Tip @: @b.Personal.FullName

                                <br />
                                    }
                                }
                    </td>
                </tr>
                    }
        </table>
            }


@page "/"
@model Proiect.Pages.Servicii.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Servicii</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>

<form asp-page="./Index" method="get">
    <div class="form-actions no-color">
        <p>
            Gaseste dupa Tip Serviciu sau Nume Personal:
            <input type="text" name="SearchString" value="@Model.CurrentFilter" />
            <input type="submit" value="Cauta" class="btn btn-primary" /> |
            <a asp-page="./Index">Inapoi la lista</a>
        </p>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@Model.TipSort">
                @Html.DisplayNameFor(model => model.Serviciu[0].Tip)
                </a>
            </th>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@Model.PersonalSort">
                @Html.DisplayNameFor(model => model.Serviciu[0].Personal)
                </a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Serviciu[0].Pret)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Serviciu[0].DataProgramarii)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Serviciu[0].Marca.NumeMarca)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Serviciu[0].CategoriiServicii)
            </th>


            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.ServiciuD.Servicii) {
    string selectedRow = "";
 if (item.ID == Model.ServiciuID)
 {
 selectedRow = "table-success";
 }
            <tr class="@selectedRow">
            <td>
                @Html.DisplayFor(modelItem => item.Tip)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Personal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pret)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataProgramarii)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Marca.NumeMarca)
                </td>
                <td>
                    @{
                        foreach (var categorie in item.CategoriiServicii)
                        {
                                @categorie.Categorie.ID @: @categorie.Categorie.NumeCategorie <br />
                        }
                    }
                </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>